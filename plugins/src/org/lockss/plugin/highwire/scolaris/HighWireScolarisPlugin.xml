    <entry>
        <string>au_start_url</string>
        <!-- content/sgrehpp/lockss-manifest/vol_10_manifest.html -->
        <string>"%scontent/%s/lockss-manifest/vol_%s_manifest.html", base_url, journal_id, volume_name</string>
    </entry>
    <entry>
        <string>au_feature_urls</string>
        <map>
            <entry>
                <string>au_title</string>
                <string>"%s", base_url</string>
            </entry>
            <entry>
                <string>au_issue</string>
                <string>"%scontent/%s/%s.toc", base_url, journal_id, volume_name, issue</string>
            </entry>
            <entry>
                <string>au_article</string>
                <map>
                    <entry>
                        <string>pdf+html;*</string>
                        <string>"%scontent/%s/%s/%s/%s.full.pdf+html", base_url, journal_id, volume_name, issue, article</string>
                    </entry>
                    <entry>
                        <string>pdf</string>
                        <string>"%scontent/%s/%s/%s/%s.full.pdf", base_url, journal_id, volume_name, issue, article</string>
                    </entry>
                    <entry>
                        <string>html</string>
                        <string>"%scontent/%s/%s/%s/%s", base_url, journal_id, volume_name, issue, article</string>
                    </entry>
                </map>
            </entry>
        </map>
    </entry>
    <entry>
        <string>au_crawlrules</string>
        <list>
            <string>1,"%scontent/%s/c?lockss-manifest/vol_%s_manifest.html", base_url, journal_id, volume_name</string>
            <string>1,"^https?://%s/.*\.(bmp|css|eot|gif|ico|jpe?g|js|otf|png|svg|tif?f|ttf|woff2?)(\?(v|itok)=[^/]*)?[\./]", base_url_host</string>
            <!-- Numerous MalformedURLException e.g. https://publications.ersnet.org/content/erj/63/6/{openurl}?query=rft.jtitle%3DLancet+Respir+Med&rft.volume%3D6&rft.spage%3D715&rft.genre%3Darticle&rft_val_fmt%3Dinfo%3Aofi%2Ffmt%3Akev%3Amtx%3Ajournal&ctx_ver%3DZ39.88-2004&url_ver%3DZ39.88-2004&url_ctx_fmt%3Dinfo%3Aofi%2Ffmt%3Akev%3Amtx%3Actx -->
            <string>2,"^https?://%s/.*(\&#123;|%%7B)openurl(\&#125;|%%7D)", base_url_host</string>
            <string>1,"^https?://%s/content/%s/%s", base_url_host, journal_id, volume_name</string>
            <string>1,"^https?://%s/admin/highwire/citation/", base_url_host</string>
            <string>1,"^https?://%s/highwire_display/entity_view/node/", base_url_host</string>
            <string>1,"^https?://%s/highwire/markup/item_fulltext/", base_url_host</string>
            <!-- looks ERS-specific, but necessary to get the tabbed content -->
            <string>1,"^https?://%s/ers-lookup/tab-link/", base_url_host</string>
            <!-- allowed for the permission URL auth excursion at ERS, but beware, see HTML crawl filter -->
            <string>1,"^https?://%s/openid-connect/", base_url_host</string>
            <!-- allowed for the permission URL auth excursion at ERS -->
            <string>1,"^https?://idp\.sams-sigma\.com/"</string>
            <string>1,"^https?://semantic-ui\.com/"</string>
            <string>1,"^https?://themes.googleusercontent\.com/"</string>
            <string>1,"^https?://((fonts|ajax)\.googleapis\.com|cdn\.jsdelivr\.net|cdnjs\.cloudflare\.com|fonts\.gstatic\.com|code\.jquery\.com)/.*(bmp|css|eot|gif|ico|jpe?g|js|otf|png|svg|tif?f|ttf|woff)(\?.*)?$"</string>
        </list>
    </entry>
    <entry>
        <string>au_def_new_content_crawl</string>
        <long>1209600000</long>
    </entry>
    <entry>
        <string>au_substance_url_pattern</string>
        <!-- https://connect.springerpub.com/content/sgrehpp/10/1/10.full.pdf -->
        <!-- https://publications.ersnet.org/content/erjor/11/1/00098-2025.full.pdf -->
        <string>"^https?://%s/content/%s/%s/[0-9]+/[-0-9]+(\.full\.pdf)?$", url_host(base_url), journal_id, volume_name</string>
    </entry>
